worker_processes  2;


events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;
    keepalive_timeout  65;

    gzip  on;

    upstream unicorn {
        server unix:/tmp/unicorn.new_svcnet.sock fail_timeout=0;
    }

    server {
        listen       80;
        server_name  148.251.27.154;
        root /home/deploy/svcnet/current/public;
        client_max_body_size 25M;

        location ^~ /assets/ {
            gzip_static on;
            expires max;
            add_header Cache-Control public;
        }


        try_files $uri/index.html $uri @unicorn;
        location @unicorn {
            proxy_set_header X-Forwared-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_redirect off;
            proxy_pass http://unicorn;
        }
    }
}
